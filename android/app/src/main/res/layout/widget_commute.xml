<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding">

    <!-- Header: Title + Weather + Refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_spacing">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_title"
            android:textColor="@color/widget_text_primary"
            android:textSize="@dimen/widget_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/widget_text_secondary"
            android:textSize="@dimen/widget_text_secondary" />

        <ImageView
            android:id="@+id/alert_indicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_alert"
            android:contentDescription="Service Alert"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_width="@dimen/refresh_icon_size"
            android:layout_height="@dimen/refresh_icon_size"
            android:contentDescription="Refresh"
            android:src="@drawable/ic_refresh" />

    </LinearLayout>

    <!-- Divider (using TextView - View not supported in RemoteViews) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Option 1 -->
    <LinearLayout
        android:id="@+id/option_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/option_1_rank"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/rank_badge_background"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/option_1_mode_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Mode" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/option_1_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_text_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option_1_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/option_1_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_text_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/option_1_next_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/next_train_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Option 2 -->
    <LinearLayout
        android:id="@+id/option_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/option_2_rank"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/rank_badge_background"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/option_2_mode_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Mode" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/option_2_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_text_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option_2_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/option_2_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_text_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/option_2_next_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/next_train_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Option 3 -->
    <LinearLayout
        android:id="@+id/option_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/option_3_rank"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/rank_badge_background"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/option_3_mode_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Mode" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/option_3_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/widget_text_primary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/option_3_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/option_3_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_text_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/option_3_next_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/next_train_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Footer: Last updated -->
    <TextView
        android:id="@+id/widget_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="@dimen/item_spacing"
        android:textColor="@color/widget_text_secondary"
        android:textSize="@dimen/widget_text_small" />

</LinearLayout>
