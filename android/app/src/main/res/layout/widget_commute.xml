<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding">

    <!-- Header: Title + Weather + Refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_spacing">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_title"
            android:textColor="@color/widget_text_primary"
            android:textSize="@dimen/widget_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/widget_text_secondary"
            android:textSize="@dimen/widget_text_secondary" />

        <ImageView
            android:id="@+id/alert_indicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_alert"
            android:contentDescription="Service Alert"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_width="@dimen/refresh_icon_size"
            android:layout_height="@dimen/refresh_icon_size"
            android:contentDescription="Refresh"
            android:src="@drawable/ic_refresh" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Option 1 -->
    <include
        android:id="@+id/option_1"
        layout="@layout/widget_option_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Option 2 -->
    <include
        android:id="@+id/option_2"
        layout="@layout/widget_option_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Option 3 -->
    <include
        android:id="@+id/option_3"
        layout="@layout/widget_option_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Footer: Last updated -->
    <TextView
        android:id="@+id/widget_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="@dimen/item_spacing"
        android:textColor="@color/widget_text_secondary"
        android:textSize="@dimen/widget_text_small" />

</LinearLayout>
