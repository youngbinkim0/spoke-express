<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Live Trains"
            android:textColor="@color/widget_text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Refresh" />
    </LinearLayout>

    <!-- Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Train Row 1 -->
    <LinearLayout
        android:id="@+id/train_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/train_1_line_badge"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/line_badge_background"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_1_direction"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/train_1_headsign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/train_1_arrival_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_1_arrival_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Train Row 2 -->
    <LinearLayout
        android:id="@+id/train_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/train_2_line_badge"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/line_badge_background"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_2_direction"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/train_2_headsign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/train_2_arrival_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_2_arrival_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Train Row 3 -->
    <LinearLayout
        android:id="@+id/train_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/train_3_line_badge"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/line_badge_background"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_3_direction"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/train_3_headsign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/train_3_arrival_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_3_arrival_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Train Row 4 -->
    <LinearLayout
        android:id="@+id/train_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/train_4_line_badge"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/line_badge_background"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_4_direction"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/train_4_headsign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/widget_text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/train_4_arrival_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_4_arrival_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/arrival_badge_normal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/widget_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="4dp"
        android:textColor="@color/widget_text_secondary"
        android:textSize="10sp" />
</LinearLayout>
