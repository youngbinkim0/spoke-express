<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CommuteOptimizer"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Main Activity with Bottom Navigation -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CommuteOptimizer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Widget Configuration Activity -->
        <activity
            android:name=".CommuteWidgetConfigActivity"
            android:exported="true"
            android:label="@string/config_title"
            android:theme="@style/Theme.CommuteOptimizer">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Live Trains Widget Configuration Activity -->
        <activity
            android:name=".LiveTrainsConfigActivity"
            android:exported="true"
            android:label="Live Trains Config"
            android:theme="@style/Theme.CommuteOptimizer">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Commute Widget Provider -->
        <receiver
            android:name=".CommuteWidgetProvider"
            android:exported="true"
            android:label="Commute Routing">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.commuteoptimizer.widget.ACTION_REFRESH" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_commute_info" />
        </receiver>

        <!-- Live Trains Widget Provider -->
        <receiver
            android:name=".LiveTrainsWidgetProvider"
            android:exported="true"
            android:label="Live Trains">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.commuteoptimizer.widget.ACTION_REFRESH_TRAINS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_live_trains_info" />
        </receiver>

    </application>

</manifest>
